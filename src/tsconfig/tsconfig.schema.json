{
  "$schema": "http://json-schema.org/schema",
  "properties": {
    "strict": {
      "type": "boolean",
      "description": "Enable typescript's strict mode",
      "default": true,
      "x-prompt": "Enable strict mode?"
    },
    "noUnusedParameters": {
      "type": "boolean",
      "description": "Detect unused parameters",
      "default": true,
      "x-prompt": "Enable check for unused parameters?"
    },
    "noUnusedLocals": {
      "type": "boolean",
      "description": "Detect unused locals",
      "default": true,
      "x-prompt": "Enable check for unused locals?"
    },
    "noImplicitAny": {
      "type": "boolean",
      "description": "Detect usage of implicit any",
      "default": true,
      "x-prompt": "Enable check implicit any?"
    }
  }
}
