{
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "outDir": "./dist/src/",
    "lib": ["es2018", "dom"],
    "strict": true,
    "noUnusedParameters": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/*/templates/**/*"]
}
