{
  "name": "@co-it/schematics",
  "version": "1.0.1-alpha.1",
  "description": "Automated & opinionated setup for large scaled Angular applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/co-it/schematics.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ts-node -P ./build/tsconfig.json ./build",
    "format": "prettier --write \"**/*.{js,json,css,scss,md,ts,html}\"",
    "tsc:prod": "tsc -p tsconfig.json",
    "tsc:update-schema": "node ./tools/tsconfig/update-schema.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint --project ./tsconfig.json --format stylish"
  },
  "keywords": [
    "schematics",
    "angular",
    "typescript",
    "prettier",
    "jest",
    "husky",
    "cypress"
  ],
  "author": "",
  "license": "GNU GPLv3",
  "schematics": "./src/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^7.3.4",
    "@angular-devkit/schematics": "^7.3.4"
  },
  "devDependencies": {
    "@types/globby": "^8.0.0",
    "@types/jest": "^24.0.9",
    "@types/node": "^8.0.31",
    "@types/node-fetch": "^2.1.6",
    "ajv": "^6.10.0",
    "fs-extra": "^7.0.1",
    "globby": "^9.1.0",
    "jest": "^24.5.0",
    "node-fetch": "^2.3.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.2.2"
  }
}
